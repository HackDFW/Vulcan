{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "plugins": ["lodash"],
    "extends": ["airbnb-base","eslint:recommended", "plugin:node/recommended", "plugin:lodash/canonical"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-var": [
            "off"
        ],
        "one-var": [
            "off"
        ]
    }
}
